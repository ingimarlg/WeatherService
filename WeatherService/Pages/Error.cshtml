@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="alert alert-danger" role="alert">
    <h2 class="alert-heading">Oops! Something went wrong...</h2>
    <p>We're sorry, but an error occurred while processing your request.</p>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p><strong>Error Message:</strong> @Model.ErrorMessage</p>
    }
    @if (Model.StatusCode != null && Model.StatusCodeNumber != null)
    {
        <p><strong>HTTP Status:</strong> (@Model.StatusCodeNumber) @Model.StatusCode.Value.ToString()</p>
    }
    @if (Model.WeatherApiErrorCode != null)
    {
        <p><strong>WeatherAPI Error Code:</strong> @Model.WeatherApiErrorCode</p>
    }
    <hr>
    <p class="mb-0">Please try again</p>
</div>

<form method="post" class="">
    <button type="submit" class="btn btn-primary" style="">Go back</button>
</form>
